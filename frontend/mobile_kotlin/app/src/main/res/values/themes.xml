<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Jobify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/jobi_blue</item>
        <item name="colorPrimaryVariant">@color/jobi_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/jobi_orange</item>
        <item name="colorSecondaryVariant">@color/jobi_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.Jobify.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">28dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.Jobify.Button.Primary" parent="Widget.Jobify.Button">
        <item name="backgroundTint">@color/jobi_blue</item>
    </style>

    <style name="Widget.Jobify.Button.Secondary" parent="Widget.Jobify.Button">
        <item name="backgroundTint">@color/jobi_orange</item>
    </style>
</resources>