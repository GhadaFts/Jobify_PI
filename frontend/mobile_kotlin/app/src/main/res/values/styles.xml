<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Profile Field Styles -->
    <style name="ProfileField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#374151</item>
    </style>

    <style name="ProfileField.Padded" parent="ProfileField">
        <item name="android:background">#F3F4F6</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Summary Section Styles -->
    <style name="SummarySection" /> <!-- Base style -->

    <style name="SummarySection.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SummarySection.Title.Strengths" parent="SummarySection.Title">
        <item name="android:textColor">#059669</item>
    </style>

    <style name="SummarySection.Title.Improvements" parent="SummarySection.Title">
        <item name="android:textColor">#D97706</item>
    </style>

    <style name="SummarySection.Assessment" parent="ProfileField">
        <item name="android:background">#DBEAFE</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#1E40AF</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Circle ImageView Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
