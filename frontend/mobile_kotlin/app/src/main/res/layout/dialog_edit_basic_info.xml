<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:text="Edit Basic Information"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1F4E5F"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputFullName"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputTitle"
        android:hint="Title (e.g., Senior Developer)"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputRole"
        android:hint="Role"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/inputDateOfBirth"
        android:hint="Date of Birth (DD/MM/YYYY)"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Gender"
        android:textSize="14sp"
        android:textColor="#6E7A8A"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerGender"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSaveBasicInfo"
        android:text="Save Changes"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_primary"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>