<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostsActivity">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- HEADER + Add Post button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/btnMenu"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/menu"
                android:layout_width="28dp"
                android:layout_height="28dp"/>

            <TextView
                android:id="@+id/tvPostsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Posts"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:id="@+id/btnAddPost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Add Post"/>
        </LinearLayout>

        <!-- RecyclerView pour afficher les posts -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPosts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"/>
    </LinearLayout>

    <!-- DRAWER MENU -->
    <ScrollView
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/drawerMenu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:text="Main"
                android:textSize="14sp"
                android:textColor="#9AA1A8"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Home -->
            <LinearLayout
                android:id="@+id/menuHomeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="@string/home_icon"/>

                <TextView
                    android:id="@+id/menuHome"
                    android:text="@string/posts"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/menuProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"/>

                <TextView
                    android:id="@+id/menuProfile"
                    android:text="Profile"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/menuLogoutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"/>

                <TextView
                    android:id="@+id/menuLogout"
                    android:text="Log out"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
