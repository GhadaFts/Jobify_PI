<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:text="@string/add_edu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F4E5F"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- University -->
        <EditText
            android:id="@+id/inputUniversity"
            android:hint="@string/university"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Degree -->
        <EditText
            android:id="@+id/inputDegree"
            android:hint="@string/degree"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Field of Study -->
        <EditText
            android:id="@+id/inputField"
            android:hint="@string/field_of_study"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Start and End Date -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/inputEduStart"
                android:hint="@string/startDate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <EditText
                android:id="@+id/inputEduEnd"
                android:hint="@string/enddate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:padding="10dp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/btnAddEducation"
            android:text="@string/add_ed"
            android:backgroundTint="#1F4E5F"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
