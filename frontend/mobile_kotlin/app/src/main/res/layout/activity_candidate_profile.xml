<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:contentDescription="@string/tod"
                    android:src="@drawable/ic_menu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btnNotification"
                    android:contentDescription="Notifications"
                    android:src="@drawable/ic_notification" android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"/>
                <ImageView
                    android:id="@+id/btnTheme"
                    android:contentDescription="@string/todo4"
                    android:src="@drawable/ic_sun"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- PROFILE IMAGE -->
            <ImageView
                android:id="@+id/profileImage"
                android:contentDescription="@string/todo2"
                android:src="@drawable/ic_user_placeholder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"/>

            <!-- NAME + EDIT ICON -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/txtName"
                    android:text="@string/meriem_bejaoui"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1F4E5F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/btnEditName"
                    android:contentDescription="@string/todo1"
                    android:src="@drawable/ic_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- COUNTRY -->
            <TextView
                android:id="@+id/txtCountry"
                android:text="@string/tunisia"
                android:textSize="14sp"
                android:textColor="#6E7A8A"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"/>

            <!-- STATS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/statApplied"
                    android:text="@string/applied_n12"
                    android:padding="12dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#1F4E5F"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#C4C4C4"/>

                <TextView
                    android:id="@+id/statReviewed"
                    android:text="@string/reviewed_n8"
                    android:padding="12dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#1F4E5F"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#C4C4C4"/>

                <TextView
                    android:id="@+id/statInterview"
                    android:text="@string/interview_n3"
                    android:padding="12dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#1F4E5F"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- BIO -->
            <TextView
                android:id="@+id/txtBio"
                android:text="@string/a_motivated_android_developer_seeking_new_challenges"
                android:textColor="#1F4E5F"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>

            <!-- BASIC INFO SECTION -->
            <LinearLayout
                android:id="@+id/basicInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtFullName"
                    android:text="Full Name: "
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtTitle"
                    android:text="Title: "
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtRole"
                    android:text="Role: "
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtBirthDate"
                    android:text="Birth Date: "
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtGender"
                    android:text="Gender: "
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <!-- CONTACT INFO SECTION -->
            <LinearLayout
                android:id="@+id/contactInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtEmail"
                    android:text="Email:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtPhone"
                    android:text="Phone:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtNationality"
                    android:text="Nationality:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtTwitter"
                    android:text="Twitter:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtGithub"
                    android:text="GitHub:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtFacebook"
                    android:text="Facebook:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/txtWebsite"
                    android:text="Website:"
                    android:textColor="#1F4E5F"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- EXPERIENCES SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="@string/experiences"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F4E5F"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btnAddExperience"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="@string/add_experience"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtNoExperience"
                android:text="@string/no_experiences_added_yet"
                android:textColor="#9AA1A8"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"/>

            <LinearLayout
                android:id="@+id/experienceItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>

            <!-- EDUCATIONS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="@string/educations"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F4E5F"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btnAddEducation"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_add"
                    android:contentDescription="@string/add_education"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtNoEducation"
                android:text="@string/no_educations_added_yet"
                android:textColor="#9AA1A8"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"/>

            <LinearLayout
                android:id="@+id/educationItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>

            <!-- SKILLS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:text="@string/skills"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F4E5F"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btnEditSkills"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtNoSkill"
                android:text="@string/no_skills_added_yet"
                android:textColor="#9AA1A8"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:padding="16dp"/>

            <!-- FLEXBOX CONTAINER FOR SKILLS -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/skillsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                android:layout_marginTop="4dp"/>

            <!-- LANGUAGES SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:text="@string/languages"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F4E5F"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btnEditLanguages"
                    android:contentDescription="@string/todo6"
                    android:src="@drawable/ic_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtNoLanguage"
                android:text="@string/no_languages_added_yet"
                android:textColor="#9AA1A8"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:padding="16dp"/>

            <!-- FLEXBOX CONTAINER FOR LANGUAGES -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/languagesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        </LinearLayout>
    </ScrollView>


    <include layout="@layout/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>