<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogTitle"
            android:text="Add Post"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F4E5F"

            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputPostName"
            android:hint="Post Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/inputDescription"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:scrollbars="vertical"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/inputLocation"
            android:hint="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/inputContractType"
            android:hint="Contract Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/inputDeadline"
            android:hint="Deadline (dd/mm/yyyy)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:drawableEnd="@drawable/ic_calendar"/>

        <Button
            android:id="@+id/btnAddPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F4E5F"
            android:backgroundTint="#1C4756"
            android:text="Add Post"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
