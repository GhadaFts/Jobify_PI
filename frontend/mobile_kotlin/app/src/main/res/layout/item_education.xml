<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_item_card"
    android:layout_marginBottom="12dp">

    <!-- Left side - Education Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDegree"
            android:text="Bachelor of Science"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F4E5F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvField"
            android:text="Computer Science"
            android:textSize="14sp"
            android:textColor="#6E7A8A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvUniversity"
            android:text="Harvard University"
            android:textSize="13sp"
            android:textColor="#9AA1A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvGraduationDate"
            android:text="2016 - 2020"
            android:textSize="12sp"
            android:textColor="#9AA1A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Right side - Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnEditEducation"
            android:src="@drawable/ic_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Edit Education"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <Button
            android:id="@+id/btnRemoveEducation"
            android:text="Remove"
            android:textSize="11sp"
            android:textColor="#E74C3C"
            android:background="@drawable/bg_button_danger"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</LinearLayout>