<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:id="@+id/scrollViewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:contentDescription="menu_icon"
                    android:src="@drawable/ic_menu"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnTheme"
                    android:src="@drawable/ic_sun"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>

            <!-- TITLE -->
            <TextView
                android:text="AI Career Advisor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <!-- SUBTITLE -->
            <TextView
                android:text="Provide details to receive tailored career advice based on your profile and target market."
                android:textSize="14sp"
                android:textColor="#666"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />



            <!-- COUNTRY -->
            <TextView
                android:text="Country:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#1F4E5F"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputCountry"
                android:hint="e.g., Tunisia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />

            <!-- EDUCATION -->
            <TextView
                android:text="Education:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#1F4E5F"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputEducation"
                android:hint="e.g., Computer Science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />

            <!-- CERTIFICATE -->
            <TextView
                android:text="Certificates:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#1F4E5F"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/inputCertificate"
                android:hint="e.g., AWS, EFSET C1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/edit_text" />

            <!-- SKILLS -->
            <TextView
                android:text="Skills:"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#1F4E5F"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/skillsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:hint="e.g., Kotlin, Java, SQL, UI/UX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@android:drawable/edit_text" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAddSkill"
                android:text="+ Add Skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333"
                android:layout_marginBottom="20dp" />

            <!-- SUBMIT -->
            <Button
                android:id="@+id/btnGetAdvice"
                android:text="Get AI Career Advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#007BFF"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <!-- RESULT -->
            <TextView
                android:id="@+id/tvAdviceResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:background="#f1f1f1"
                android:visibility="gone"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </ScrollView>

    <!-- DRAWER MENU -->
    <ScrollView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/drawerMenu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Main Section -->
            <TextView
                android:text="@string/main"
                android:textSize="14sp"
                android:textColor="#9AA1A8"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/menuHomeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="@string/home_icon"/>

                <TextView
                    android:id="@+id/menuHome"
                    android:text="Find job"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="@string/profile_icon"/>

                <TextView
                    android:id="@+id/menuProfile"
                    android:text="@string/profile"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Account Section -->
            <TextView
                android:text="@string/account"
                android:textSize="14sp"
                android:textColor="#9AA1A8"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/menuLogoutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    android:contentDescription="@string/logout_icon"/>

                <TextView
                    android:id="@+id/menuLogout"
                    android:text="@string/log_out"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Dark Mode -->
            <LinearLayout
                android:id="@+id/menuDarkModeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/menuDarkModeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dark_mode"
                    android:contentDescription="@string/dark_mode_icon"/>

                <TextView
                    android:id="@+id/menuDarkMode"
                    android:text="@string/dark_mode"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Support Section -->
            <TextView
                android:text="@string/support"
                android:textSize="14sp"
                android:textColor="#9AA1A8"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/menuHelpLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_help"
                    android:contentDescription="@string/help_icon"/>

                <TextView
                    android:id="@+id/menuHelp"
                    android:text="@string/help"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- AI Section -->
            <TextView
                android:text="@string/ai"
                android:textSize="14sp"
                android:textColor="#9AA1A8"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/menuCorrectCVLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cv"
                    android:contentDescription="@string/correct_cv_icon"/>

                <TextView
                    android:id="@+id/menuCorrectCV"
                    android:text="@string/correct_cv"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuInterviewTrainingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_interview"
                    android:contentDescription="@string/interview_training_icon"/>

                <TextView
                    android:id="@+id/menuInterviewTraining"
                    android:text="@string/interview_training"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuJobMarketAnalyseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_market"
                    android:contentDescription="@string/job_market_analyse_icon"/>

                <TextView
                    android:id="@+id/menuJobMarketAnalyse"
                    android:text="@string/job_market_analyse"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
