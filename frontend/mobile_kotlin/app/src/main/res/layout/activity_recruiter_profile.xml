<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecruiterProfileActivity">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:id="@+id/scrollViewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        android:layout_marginTop="26pt">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER: MENU + EDIT BUTTON -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/btnMenu"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="@string/menu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btnEdit"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Edit Profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- COMPANY IMAGE WITH SHADOW EFFECT -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/companyImage"
                        android:src="@drawable/ic_user_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>

                    <!-- EDIT PHOTO BUTTON -->
                    <ImageView
                        android:id="@+id/btnEditPhoto"
                        android:src="@drawable/ic_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="16dp"
                        android:padding="12dp"
                        android:background="@drawable/rounded_button"
                        android:elevation="4dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- PROFILE INFO CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <!-- RECRUITER NAME -->
                    <TextView
                        android:id="@+id/txtRecruiterName"
                        android:text="Recruiter Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1F4E5F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- COUNTRY -->
                    <TextView
                        android:id="@+id/txtCountry"
                        android:text="Tunisia"
                        android:textSize="15sp"
                        android:textColor="#6E7A8A"
                        android:layout_marginTop="6dp"
                        android:drawablePadding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- POSTS / EMPLOYEES STATS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#F5F7FA"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtPostsCount"
                                android:text="43"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#1F4E5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Posts"
                                android:textSize="14sp"
                                android:textColor="#6E7A8A"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#D4DDE2"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txtEmployeesCount"
                                android:text="254"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#1F4E5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Employees"
                                android:textSize="14sp"
                                android:textColor="#6E7A8A"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- SOCIAL LINKS -->
                    <LinearLayout
                        android:id="@+id/socialLinksView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:padding="8dp"
                        android:background="@drawable/rounded_edittext">

                        <ImageView
                            android:id="@+id/btnTwitter"
                            android:src="@drawable/ic_twitter"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/btnWeb"
                            android:src="@drawable/ic_web"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/btnGithub"
                            android:src="@drawable/ic_github"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/btnFacebook"
                            android:src="@drawable/ic_facebook"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CONTACT INFO SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- PHONE -->
                <LinearLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:text="ðŸ“ž"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtPhone"
                        android:text="+216 12 345 678"
                        android:textSize="16sp"
                        android:textColor="#1F4E5F"
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- DOMAINE -->
                <LinearLayout
                    android:id="@+id/domaineLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:text="ðŸ¢"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtDomaine"
                        android:text="Information Technology"
                        android:textSize="16sp"
                        android:textColor="#1F4E5F"
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- ADDRESS -->
                <LinearLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:text="ðŸ“"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtAddress"
                        android:text="Tunis, Tunisia"
                        android:textSize="16sp"
                        android:textColor="#1F4E5F"
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- DESCRIPTION CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="About"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F4E5F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtBio"
                        android:text="A short description about the company"
                        android:textColor="#6E7A8A"
                        android:textSize="15sp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SERVICES SECTION -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="Services"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1F4E5F"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/btnAddService"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_add"
                            android:contentDescription="Add Service"
                            android:padding="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:visibility="gone"
                            android:background="?attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNoService"
                        android:text="No services added yet"
                        android:textColor="#9AA1A8"
                        android:layout_marginTop="12dp"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/servicesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start"
                        app:alignItems="flex_start"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SAVE BUTTON (EDIT MODE) -->
            <Button
                android:id="@+id/btnSave"
                android:text="Save Changes"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="8dp"
                android:visibility="gone"/>

            <!-- BOTTOM SPACING -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- DRAWER MENU -->
    <ScrollView
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/drawerMenu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:text="Main"
                android:textSize="14sp"
                android:textColor="#9AA1A8"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/menuHomeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="@string/home_icon"/>

                <TextView
                    android:id="@+id/menuHome"
                    android:text="@string/posts"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"/>

                <TextView
                    android:id="@+id/menuProfile"
                    android:text="Profile"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuLogoutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"/>

                <TextView
                    android:id="@+id/menuLogout"
                    android:text="Log out"
                    android:textSize="16sp"
                    android:textColor="#1F4E5F"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>