<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jobify"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#336781"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Career Network"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Setup Progress"
                android:textSize="16sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25% Completed"
                android:textSize="16sp"
                android:textColor="#336781"
                android:textStyle="bold"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="24dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="#336781"
            android:progressBackgroundTint="#D4DDE2"
            android:progress="25"
            android:max="100"/>

        <!-- Tab Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPersonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:textSize="14sp"
                    android:textColor="#336781"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="4dp"
                    android:drawableTint="#336781"/>

                <View
                    android:id="@+id/viewPersonalIndicator"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:background="#336781"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="4dp"
                    android:drawableTint="#6B7280"/>

                <View
                    android:id="@+id/viewProfileIndicator"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:background="#336781"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSocialLinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:background="?attr/selectableItemBackground"
                    android:drawableStart="@drawable/ic_link"
                    android:drawablePadding="4dp"
                    android:drawableTint="#6B7280"/>

                <View
                    android:id="@+id/viewSocialIndicator"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:background="#336781"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Step 1: Basic Information -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="20dp"/>

                <!-- Logo Upload -->
                <LinearLayout
                    android:id="@+id/layoutLogoUpload"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/dashed_border"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivCompanyLogo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:contentDescription="Company Logo"/>

                    <ImageView
                        android:id="@+id/ivUploadIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_upload"
                        android:contentDescription="Upload Icon"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse company logo or drop here"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max logo size 5 MB"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF"/>
                </LinearLayout>

                <!-- Company Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name *"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nationality -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nationality *"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spinnerNationality"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp"/>

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number *"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxStrokeColor="#336781"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCountryCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="phone"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginStart="8dp"
                        app:boxStrokeColor="#336781"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Company Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCompanyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Company Address *"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:gravity="top"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextStep1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Next"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#F97316"
                    android:layout_marginTop="24dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 2: Profile -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="20dp"/>

                <!-- Speciality -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Speciality"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSpeciality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Number of Employees -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Number of Employees"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmployeesNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Services -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxStrokeColor="#336781"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Add a service..."
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddService"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:text="Add"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#336781"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:chipSpacingHorizontal="8dp"/>

                <!-- Company Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Description"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="4"
                        android:gravity="top"
                        android:inputType="textMultiLine"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextStep2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Next"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#F97316"
                    android:layout_marginTop="24dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 3: Social Links -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Links"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="20dp"/>

                <!-- Web Link -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Web Link"
                    app:prefixText="https://"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWebLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- GitHub URL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="GitHub URL"
                    app:prefixText="https://"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGithub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Twitter URL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Twitter URL"
                    app:prefixText="https://"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTwitter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Facebook URL -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Facebook URL"
                    app:prefixText="https://"
                    app:boxStrokeColor="#336781"
                    app:hintTextColor="#336781"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveComplete"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save and Complete"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#F97316"
                    android:layout_marginTop="24dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 4: Completion -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutStep4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="Success"
                    android:layout_marginBottom="24dp"
                    app:tint="#10B981" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Congratulations!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your profile is 100% complete!"
                    android:textSize="18sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start hiring the best talent now!"
                    android:textSize="16sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="32dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Go to Dashboard"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#F97316"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>