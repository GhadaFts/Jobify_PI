<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/rvPosts"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Job Title -->
        <TextView
            android:id="@+id/job_title"
            android:text="Product Manager"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Job Position -->
        <TextView
            android:id="@+id/job_position"
            android:text="Senior Product Manager"
            android:textColor="#2B7BEA"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Type & Status -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_type"
                android:text="Full-time"
                android:background="@drawable/badge_background"
                android:padding="4dp"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/job_status"
                android:text="Active"
                android:textColor="#2BAF2B"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Created At -->
        <TextView
            android:id="@+id/created_at"
            android:text="Posted on: 01 Nov 2025"
            android:textSize="12sp"
            android:textColor="#777"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Description -->
        <TextView
            android:id="@+id/job_description"
            android:text="Lead product strategy and development..."
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Experience & Salary -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/job_experience"
                android:text="3–5 years"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/job_salary"
                android:text="₹15–25 LPA"
                android:textColor="#2BAF2B"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Requirements -->
        <TextView
            android:id="@+id/requirements_label"
            android:text="Requirements:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/requirements_container"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Skills -->
        <TextView
            android:id="@+id/skills_label"
            android:text="Skills:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/skills_container"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:alignItems="flex_start"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btn_delete"
            android:text="Delete Post"
            android:backgroundTint="#E53935"
            android:textColor="#FFF"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
